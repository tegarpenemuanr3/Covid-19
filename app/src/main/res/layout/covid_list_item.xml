<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tvProvinsi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Provinsi : DKI Jakarta"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProvinsi">

        <TableRow>
            <TextView
                android:id="@+id/tvKasus"
                android:text="Kasus : 300"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tvMeninggal"
                android:text="Meninggal : 300"
                android:gravity="right"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tvSembuh"
                android:text="Sembuh : 300"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tvRawat"
                android:text="Dirawat : 300"
                android:gravity="right"
                android:padding="3dp" />
        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl" />

</androidx.constraintlayout.widget.ConstraintLayout>